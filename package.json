    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "ladle serve": "ladle serve",
    "ladle build": "ladle build",
    "ladle preview": "ladle preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
